<configuration>
    <appender name="FILE" class="ch.qos.logback.core.FileAppender">
        <file>sim4da-${PID}.log</file>
        <encoder>
            <pattern>%date %level [%thread] %logger{20} [%file:%line] %msg%n</pattern>
        </encoder>
    </appender>

    <root level="debug">
        <appender-ref ref="FILE" />
    </root>
</configuration>